{
  "name": "create-kkt",
  "version": "2.3.0",
  "description": "Creates a KKT application using the command line.",
  "homepage": "https://kktjs.github.io/create-kkt",
  "author": "Kenny Wong <wowohoo@qq.com> (https://github.com/jaywcjlove)",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kktjs/create-kkt"
  },
  "bin": {
    "create-kkt": "lib/cli.js"
  },
  "scripts": {
    "prepare": "husky install && npm run build",
    "start": "node lib/index.js",
    "watch": "tsbb watch --disable-babel -f src/cli.ts",
    "build": "tsbb build --disable-babel -f src/cli.ts",
    "prettier": "prettier --write \"**/*.{js,ts,less,md,json}\"",
    "coverage": "tsbb test --coverage",
    "test": "tsbb test"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ]
  },
  "keywords": [
    "create",
    "kkt",
    "react",
    "redux",
    "rematch",
    "uiw",
    "redux-saga",
    "elm",
    "framework",
    "frontend"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "7.0.2",
    "lint-staged": "11.2.0",
    "prettier": "2.4.1",
    "tsbb": "3.4.1"
  },
  "dependencies": {
    "@babel/runtime": "7.15.4",
    "@types/download": "8.0.1",
    "@types/fs-extra": "9.0.13",
    "@types/minimist": "1.2.2",
    "@types/node": "16.7.1",
    "ora": "5.4.1",
    "download": "8.0.0",
    "minimist": "1.2.5",
    "fs-extra": "10.0.0"
  }
}
