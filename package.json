{
  "name": "create-kkt",
  "version": "3.0.0",
  "description": "Creates a KKT application using the command line.",
  "homepage": "https://kktjs.github.io/create-kkt",
  "author": "Kenny Wong <wowohoo@qq.com> (https://github.com/jaywcjlove)",
  "main": "lib/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kktjs/create-kkt"
  },
  "bin": {
    "create-kkt": "lib/cli.js"
  },
  "scripts": {
    "prepare": "husky install && npm run build",
    "start": "node lib/index.js",
    "watch": "tsbb watch",
    "build": "tsbb build",
    "prettier": "prettier --write \"**/*.{js,ts,less,md,json}\"",
    "coverage": "tsbb test --coverage --detectOpenHandles",
    "test": "tsbb test --detectOpenHandles"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "testMatch": [
      "<rootDir>/test/*.{ts,tsx}"
    ]
  },
  "keywords": [
    "create",
    "kkt",
    "react",
    "redux",
    "rematch",
    "uiw",
    "redux-saga",
    "elm",
    "framework",
    "frontend"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,less,md,json}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "tsbb": "^4.1.4"
  },
  "dependencies": {
    "@types/download": "^8.0.2",
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "~1.2.2",
    "@types/node": "^20.0.0",
    "ora": "~5.4.1",
    "download": "~8.0.0",
    "minimist": "^1.2.8",
    "fs-extra": "^11.1.1"
  }
}
